<%= form_with(model: @file_item, url: @file_item.persisted? ? library_path(@file_item) : libraries_path, method: @file_item.persisted? ? :patch : :post, multipart: true) do |form| %>

<div class="row">
  <div class="col-md-4">
    <% if @file_item.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@file_item.errors.count, "error") %> prohibited this file item from being saved:</h2>

        <ul>
          <% @file_item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>


<div class="row">
  <div class="col-md-3">
    <%= form.label :file_name %>
    <%= form.text_field :file_name %>
  </div>

  <div class="col-md-3">
    <%= form.label :file_type %>
    <%= form.text_field :file_type %>
  </div>

  <div class="col-md-3">
    <%= form.label :file %>
    <%= form.file_field :file %>
  </div>

  <div class="col-md-3">
    <%= form.submit 'Save File Item', class: 'btn btn-primary' %>
  </div>
  </div>
</div>
<% end %>
