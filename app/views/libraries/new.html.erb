<div class="container">
  <h1>New File Item</h1>
  </br>
  <%= form_with(model: @file_item, url: libraries_path, multipart: true) do |form| %>
    <div class="row">
      <div class="col-md-4">
        <%= form.label :category_id %>
        <%= form.collection_select :category_id, Category.all, :id, :name, {prompt: "Select a category"}, class: 'form-control' %>
      </div>

      <div class="col-md-4">        

        <%= form.label :file_name %>
        <%= form.text_field :file_name, class: 'form-control' %>
      </div>

      <div class="col-md-4">
        <%= form.label :file_description %>
        <%= form.text_field :file_description, class: 'form-control' %>
      </div>
    </div>

<br/>

    <div class="row">
      <div class="col-md-4">
        <%= form.label :file_type %>
        <%= form.text_field :file_type, class: 'form-control' %>
      </div>

      <div class="col-md-8">
        <%= form.label :file %>
        <%= form.file_field :file, class: 'form-control' %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-4">
        <%= form.submit 'Upload File', class: 'btn btn-primary upload-file' %>
      </div>
    </div>
  <% end %>
</div>