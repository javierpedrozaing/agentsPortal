<div class="container score">
  <h3>Score Report Agent</h3>
  <p><%= @user.name %> <%= @user.last_name %></p>
  <%= form_with(url: score_path(@years), local: true, method: "post") do |f| %>
  <div class="period">
    <span>Period Year:</span>
    <select class="form-select" aria-label="Default select example"> 
    <% @years.each do |year| %>
      <option value="<%= year %>"><%= year %></option>
    <% end %>     
    </select>
  </div>
  <% end %>
  <div class="row">   
    <div class="results">
      <div class="col">        
        <%= label_tag :sales_volume, nil, class: "form-label" %>
        <%= text_field_tag :sales_volume, @sales_volume, readonly: true, class: "read-only" %>
        </br>
        <%= label_tag :lease_volume, nil,  class: "form-label" %>
        <%= text_field_tag :lease_volume, @lease_volume, readonly: true %>
        </br>
        <%= label_tag :total_volume, nil,  class: "form-label" %>
        <%= text_field_tag :total_volume, @total_volume, readonly: true %>        
      </div>

      <div class="col">
        <%= label_tag :sales_transactions, nil, class: "form-label" %>
        <%= text_field_tag :sales_transaction, @sales_transactions, readonly: true, class: "" %>
        </br>
        <%= label_tag :lease_transactions, nil, readonly: true, class: "form-label" %>
        <%= text_field_tag :lease_transaction, @lease_transactions, readonly: true, class: "" %>
        </br>
        <%= label_tag :total_transactions, nil, class: "form-label" %>
        <%= text_field_tag :total_transaction, @total_transactions, readonly: true, class: "" %>
      </div>
    </div>
  </div>
</div>
